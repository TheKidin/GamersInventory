<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GamersInventory.DashboardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GamersInventory"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Gamers - Inventario">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="#1a1a1a">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Header-->
        <Border Grid.Row="0" Background="#2a2a2a" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ðŸŽ® Gamer's Inventory"
                           FontSize="18" FontWeight="Bold" Foreground="White"
                           VerticalAlignment="Center"/>
                
                <!--Barra de Busqueda-->

                <TextBox Grid.Column="1" x:Name="txtBuscar"
                         PlaceholderText="Buscar Productos..."
                         Margin="40,0" Height="40" Width="300"
                         HorizontalAlignment="Left"
                         Background="#3a3a3a" Foreground="White"
                         BorderBrush="#555"/>
                
                <!--Usuario-->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <TextBlock x:Name="txtUsuario" Text="Administrador"
                               Foreground="#cccccc" VerticalAlignment="Center"/>
                    <Button Content="Cerrar Sesion" Background="#cc3333"
                            Foreground="White" Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!--Contenido Principla-->
        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!--Panel lateral - Categorias-->
            <StackPanel Grid.Column="0" Width="200" Spacing="15">
                <TextBlock Text="CATEGORIAS" FontWeight="Bold"
                           Foreground="White" FontSize="16"/>

                <RadioButton x:Name="rbTodos" Content="ðŸ“¦ Todos los productos"
                             GroupName="Categorias" IsChecked="True"
                             Foreground="White"/>
                <RadioButton x:Name="rbVidejuegos" Content="ðŸŽ® Videojuegos"
                             GroupName="Categorias" Foreground="White"/>
                <RadioButton x:Name="rbConsolas" Content="Consolas"
                             GroupName="Categorias" Foreground="White"/>
                <RadioButton x:Name="rbAccesorios" Content="ðŸŽ§ Accesorios"
                             GroupName="Categorias" Foreground="White"/>

                <Button x:Name="rbNuevo" Content="âž• Agregar Producto"
                        Background="#0066cc" Foreground="White"
                        FontWeight="Bold" Height="40" Margin="0,20,0,0"
                        Click="BtnNuevo_Click"/>
            </StackPanel>
            
            <!--Lista de Productos-->
            <ScrollViewer Grid.Column="1" Margin="20,0,0,0">
                <StackPanel x:Name="panelProductos" Spacing="10">
                </StackPanel>
                
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
